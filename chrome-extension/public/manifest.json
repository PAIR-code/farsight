{
  "manifest_version": 3,
  "name": "Farsight",
  "version": "0.1",
  "description": "In Situ Interactive Widgets for Responsible AI",
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["style.css"],
      "matches": [
        "https://makersuite.google.com/app/prompts/*",
        "https://aistudio.google.com/app/prompts/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {},
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
